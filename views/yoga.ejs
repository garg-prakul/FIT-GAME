<!-- ========= Embedding Game START ========== -->
   <div class="container text-center" style="margin-top:40px;">
        <button id="startYogaBtn" class="btn btn-primary">Start Yoga Exercise</button>
        <br><br>
        <button id="playGameBtn" class="btn btn-success" disabled onclick="window.location.href='/games'">Play Game</button>
        <div id="yogaStatus" style="margin-top:20px;"></div>
    </div>

    <script>
    document.getElementById('startYogaBtn').onclick = function() {
        document.getElementById('yogaStatus').innerText = 'Starting yoga exercise...';
        fetch('/start-yoga', { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('yogaStatus').innerText = 'Yoga completed! You can now play the game.';
                    document.getElementById('playGameBtn').disabled = false;
                } else {
                    document.getElementById('yogaStatus').innerText = 'Yoga exercise failed or was cancelled.';
                }
            })
            .catch(() => {
                document.getElementById('yogaStatus').innerText = 'Error starting yoga exercise.';
            });
    };
    </script>

